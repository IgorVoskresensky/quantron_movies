<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuantronMovies" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bg_main_l_theme</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/text_color_l_theme</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bg_main_l_theme</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="SCREEN">
        <item name="android:background">@color/bg_main_l_theme</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor">@color/text_color_l_theme</item>
    </style>

    <style name="TEXT_OVERVIEW">
        <item name="android:textColor">@color/text_color_d_theme</item>
    </style>

    <style name="BOTTOM_NUV">
        <item name="itemIconTint">@color/text_color_l_theme</item>
        <item name="android:background">@drawable/bg_bottom_nav</item>
    </style>

    <style name="TOGGLE_BTN">
        <item name="android:textColor">@color/text_color_l_theme</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="CARDVIEW_HOME">
        <item name="android:background">@drawable/bg_cardview_home</item>
    </style>
</resources>